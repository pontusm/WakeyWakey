@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
  Layout = "Master.cshtml";
}

<div class="page-header">
  <h1>New machine</h1>
</div>
<p>Please fill in the details of the new machine.</p>
<div class="row">
  <div class="span4">
    <form class="well" method="POST">
      <label for="Name">Name</label>
      <input type="text" name="Name" class="input-large"/>

      <label for="HostName">Hostname or IP address</label>
      <input type="text" name="HostName" class="input-large"/>
      
      <div class="control-group">
        <label for="MacAddress">MAC address</label>
        <div class="controls">
          <div class="input-append">
            <input type="text" name="MacAddress" class="input-large"/>
            <button id="lookupmac" class="btn" type="button">Lookup</button>
            <img id="loader" src="/content/img/loader.gif" alt="Loading..." style="display: none"/>
          </div>
        </div>
      </div>

      <div class="clearfix">
        <button class="btn" type="submit" data-toggle="button">Create</button>
      </div>
    </form>
  </div>
</div>
<a href="/">Back</a>